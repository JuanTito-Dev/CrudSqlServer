@{
    ViewData["Title"] = "Registro";
    int Contador; 
}
@model IEnumerable<Registro> 

<h1 class="text-center">Sistema de registro</h1>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-controller="Home" asp-action="Crear" class="btn btn-secondary mx-auto d-block btn-lg">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-user-plus"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" /><path d="M16 19h6" /><path d="M19 16v6" /><path d="M6 21v-2a4 4 0 0 1 4 -4h4" /></svg> Crear nuevo contacto
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <section class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><i class="fa fa-list" aria-hidden="true"></i> <strong> Lista de registro</strong></h3>
            </div>
            <div class="card-body">
                <div class="table table-responsive">
                    @{
                        Contador = 0;
                    }
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" cellspaccing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th>N°</th>
                                    <th>Nombre</th>
                                    <th>@Html.DisplayNameFor(m => m.ApellidoPaterno)</th>
                                    <th>@Html.DisplayNameFor(x => x.ApellidoMaterno)</th>
                                    <th>Sexo</th>
                                    <th>Edad</th>
                                    <th>@Html.DisplayNameFor(x => x.EstadoCivil)</th>
                                    <th>@Html.DisplayNameFor(x => x.Activo)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var registro in Model)
                                {
                                    Contador++;
                                    <tr>
                                        <th class="fw-normal">@Contador</th>
                                        <th class="fw-normal">@registro.Nombres</th>
                                        <th class="fw-normal">@Html.DisplayFor(x => registro.ApellidoPaterno)</th>
                                        <th class="fw-normal">@Html.DisplayFor(x => registro.ApellidoMaterno)</th>
                                        <th class="fw-normal">@(registro.Sexo is "Masculino"? "M" : "F")</th>
                                        <th class="fw-normal">@Html.DisplayFor(x => registro.Edad)</th>
                                        <th class="fw-normal">@registro.EstadoCivil</th>
                                        <th class="fw-normal">@(registro.Activo? "Si":"No")</th>
                                        <th class="fw-normal d-flex justify-content-evenly">
                                            <a asp-controller="Home" asp-action="Detalle" asp-route-id="@registro.Id" class="btn btn-secondary"><i class="fa fa-info-circle" aria-hidden="true"></i> Detalle</a>
                                            <a asp-controller="Home" asp-action="Editar" asp-route-id="@registro.Id" class="btn btn-warning"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-edit"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" /><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" /><path d="M16 5l3 3" /></svg> Editar</a>
                                            <a asp-controller="Home" asp-action="Eliminar" asp-route-id="@registro.Id"  class="btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-trash"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 7l16 0" /><path d="M10 11l0 6" /><path d="M14 11l0 6" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg> Eliminar</a>
                                        </th>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros disponibles</p>
                    }
                </div>
            </div>
        </section>
    </div>
</div>